mixin experience-item( company_name, date, job, content)
    .experience-item
        .experience-item__dot-container
            .experience-item__dot
        .experience-item__content
            .experience-item__content-1line
                p.experience-item__company-name= company_name
                    span.experience-item__date= date
            .experience-item__content-2line
                p.experience-item__job= job
            .experience-item__content-3line
                p.experience-item__container= content
