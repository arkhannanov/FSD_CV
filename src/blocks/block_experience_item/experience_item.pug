mixin experience-item(company_name, date, job,content)
    .experience-item
        .experience-item-wrapper
            .experience-item-wrapper__dot
                .dot
            .experience-item-wrapper__content
                .experience-item-wrapper__content-1line
                    p.experience-item-wrapper__company-name=company_name
                        span.experience-item-wrapper__date=date
                div.experience-item-wrapper__content-2line
                    p.experience-item-wrapper__job=job
                div.experience-item-wrapper__content-3line
                    p.experience-item-wrapper__container=content
