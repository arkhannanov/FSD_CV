mixin contact(options = {source: "", title: "", address: "", email: "", phone: "", website: ""})
    -let {source, title, address, email, phone, website} = options;
    .contact
        .contact__header
            include ../headline/headline.pug
            +headline(source, title)
        .contact__item
            .contact__item__container-header address 
            a.contact__item__container-content= address
        .contact__item
            .contact__item__container-header e-mail 
            a(href="mailto: contact@domain.com", class="contact__item__container-content")= email 
        .contact__item
            .contact__item__container-header phone
            a(href="tel: 555-555-555", class="contact__item__container-content")= phone
        .contact__item
            .contact__item__container-header website
            a(href="www.yourweb.com", target="_blank", rel="noopener noreferrer", class="contact__item__container-content")= website