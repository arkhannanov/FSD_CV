include ../headline/headline.pug

mixin education(options = {source: "", title: "", degree: "", date: "", universityname: "", text: ""})
    -let {source, title, degree, date, universityname, text} = options;
    .education
        .education__headline
            +headline( source, title)
        .education__item
            include ../education-item/education-item.pug
            +education-item( degree, date, universityname, text)
            +education-item( degree, date, universityname, text)
            +education-item( degree, date, universityname, text)
            +education-item( degree, date, universityname, text)
